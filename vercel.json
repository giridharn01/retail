{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "server/server.js",
      "use": "@vercel/node",
      "config": {
        "env": {
          "MONGODB_URI": "@mongodb_uri"
        }
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/static/(.*)", "dest": "/client/build/static/$1" },
    { "src": "/favicon.ico", "dest": "/client/build/favicon.ico" },
    { "src": "/manifest.json", "dest": "/client/build/manifest.json" },
    { "src": "/logo192.png", "dest": "/client/build/logo192.png" },
    { "src": "/logo512.png", "dest": "/client/build/logo512.png" },
    { "src": "/robots.txt", "dest": "/client/build/robots.txt" },
    { "src": "/(.*)", "dest": "/client/build/index.html" }
  ],
  "env": {
    "JWT_SECRET": "@jwt_secret"
  }
}